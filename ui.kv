        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos

<BLabel@Label+BackgroundColor>
    background_color: 0, 0, 0, 0
<BFileChooserListView@FileChooserListView+BackgroundColor>
